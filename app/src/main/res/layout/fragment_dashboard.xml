                android:src="@drawable/profile_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/firstLetter"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/titillium_web_bold"
                android:gravity="center_vertical"

                android:textColor="@color/recycler_item_text_color"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/letterBg"
                app:layout_constraintEnd_toEndOf="@id/letterBg"
                app:layout_constraintStart_toStartOf="@id/letterBg"
                app:layout_constraintTop_toTopOf="@id/letterBg" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_dash_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.cardview.widget.CardView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginHorizontal="18dp"
                android:background="#FFFFFF"
                android:minWidth="78dp"
                android:onClick="@{listener.onClick}"
                android:visibility="gone"
                app:cardCornerRadius="29dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="8dp"

                >

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/crownIcon"
                        android:layout_width="34dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:src="@drawable/crown_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/gamePoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="11dp"
                        android:fontFamily="@font/bai_jamjuree_bold"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="20"
                        android:textColor="@color/recycler_item_text_color"
                        android:textSize="14sp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/crownIcon"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


